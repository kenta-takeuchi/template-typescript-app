{
  "name": "@template/api",
  "version": "0.1.0",
  "description": "Ryckan API Server",
  "private": true,
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "generate:types": "openapi-typescript ../../api-spec/openapi.yaml -o src/types/api.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/lib/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^8.0.3",
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.30.0",
    "fastify": "^4.24.0",
    "fastify-plugin": "^4.5.1",
    "firebase-admin": "^11.11.0",
    "nanoid": "^4.0.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@template/config": "workspace:*",
    "@template/database": "workspace:*",
    "@prisma/client": "^5.7.0",
    "@template/types": "workspace:*",
    "@template/utils": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.8.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
