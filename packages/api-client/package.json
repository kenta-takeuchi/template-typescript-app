{
  "name": "@template/api-client",
  "version": "0.1.0",
  "description": "Shared API client for Ryckan applications",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/src/index.js",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist generated",
    "generate": "openapi-generator-cli generate -c openapi-generator.json",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "postinstall": "openapi-generator-cli version-manager set 6.6.0 || true"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.20.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}
