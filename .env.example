# Environment variables for Template App

# Node environment
NODE_ENV=development

# API Server
PORT=4000
HOST=0.0.0.0

# Frontend URL
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/template_dev

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-super-secret-encryption-key-for-development

# Firebase Configuration (Optional)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_CLIENT_EMAIL=test@firebase-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# SendGrid (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@example.com

# Storage (Optional)
STORAGE_BUCKET=your-storage-bucket

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Session
SESSION_SECRET=your-session-secret-change-in-production

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_SWAGGER_UI=true
ENABLE_GRAPHQL_PLAYGROUND=true